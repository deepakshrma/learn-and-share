<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DBSButton.Rounded.QuickReply">
        <item name="android:background">#00000000</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="dbs_borderColor">?colorPrimary</item>
        <item name="dbs_border">1dp</item>
        <item name="dbs_cornerRadius">16dp</item>
    </style>

    <style name="DBSButton.Rounded.Select">

        <item name="android:background">#00000000</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="dbs_borderColor">?colorPrimary</item>
        <item name="dbs_border">1dp</item>
        <item name="dbs_cornerRadius">2dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="DBSQuickReplyView">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">@dimen/content_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">@dimen/medium_padding</item>
    </style>

    <style name="DBSHeader.H5.Link">
        <item name="android:background">?dbs_themePrimaryTextColorInverse</item>
        <item name="android:textColor">?dbs_themePrimaryTextColor</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:layout_gravity">center</item>
        <item name="dbs_cornerRadius">10dp</item>
    </style>

    <style name="DBSMessageContainer">
        <item name="android:padding">@dimen/x_large_padding</item>
        <item name="android:layout_marginRight">100dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>

    <style name="DBSCardView">
        <!--<item name="cardBackgroundColor">?dbs_themePrimaryTextColorInverse</item>-->
        <!--<item name="contentPadding">8dp</item>-->
        <!--<item name="cardElevation">16dp</item>-->
    </style>

    <style name="DBSAQText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/content_text_size</item>

    </style>

    <style name="DBSAQText.Message">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="DBSAQText.Action">
        <item name="android:minHeight">40dp</item>
        <item name="android:padding">14dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/my_bubble</item>
    </style>

    <style name="DBSAQText.Select">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/my_bubble</item>
    </style>

    <style name="DBSAQLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
</resources>