<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?dbs_themePrimaryTextColorInverse"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/pins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"></LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <!--<Placing edit text here so that android can give enough scroll to type when DBSOtpEditText is last view in the screen else keyboard comes on top of pins-->
    <EditText
        android:id="@+id/hidden_edit_text"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_below="@id/status_text_view"
        android:cursorVisible="false"
        android:inputType="numberPassword" />

    <LinearLayout
        android:id="@+id/status_line_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/card_view"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:orientation="vertical">

        <View
            android:id="@+id/status_line"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <!--The below view would cover the height of shadow and makes sure the view above
            would overlay on card view
         -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="2dp" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/status_text_view"
        style="@style/DBSLabelSmall.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_line_holder"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginTop="@dimen/x_small_margin" />
</RelativeLayout>
