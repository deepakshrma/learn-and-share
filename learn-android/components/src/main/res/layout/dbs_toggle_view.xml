<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="?attr/dbs_themePrimaryTextColorInverse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/toggle_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/xx_small_margin"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/toggle_switch"
            android:textSize="@dimen/title_text_size"
            android:textColor="?dbs_themePrimaryTextColor"
            android:fontFamily="@font/roboto_regular"
            tools:text="Label" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/toggle_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/medium_margin"
            android:layout_marginTop="@dimen/medium_margin"
            android:checked="true" />

    </RelativeLayout>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/toggle_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?dbs_themeSecondaryTextColor"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginTop="@dimen/x_small_margin"
        android:layout_marginEnd="@dimen/xx_small_margin"
        android:visibility="gone"
        tools:text="Description" />
</LinearLayout>
