<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DBSMenuItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="5">

    <ImageView
        android:id="@+id/dbsMenuItemIcon"
        style="@style/DBSMenuItemIcon"
        android:layout_weight="4"
        android:src="@drawable/placeholder" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/dbsMenuItemTitle"
        style="@style/DBSMenuItemTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/xx_small_margin"
        android:layout_weight="1"
        android:text="@string/menu_item" />
</LinearLayout>

