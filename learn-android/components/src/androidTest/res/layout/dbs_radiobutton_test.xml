<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/in_ascent_light">

    <com.dbs.ui.components.dbsradiobutton.DBSRadioGroup
        android:id="@+id/preset_time_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <com.dbs.ui.components.dbsradiobutton.DBSRadioButtonHolder
            android:id="@+id/rHolder1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.dbs.ui.components.dbsradiobutton.DBSRadioButton
                    android:id="@+id/rButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Option 1"
                    android:textColor="#FFFFFF"
                    app:dbs_radioColorChecked="#FF4081"
                    app:dbs_radioColorUnChecked="#FDB037" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lorem Ispum"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </com.dbs.ui.components.dbsradiobutton.DBSRadioButtonHolder>

        <com.dbs.ui.components.dbsradiobutton.DBSRadioButtonHolder
            android:id="@+id/rHolder2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.dbs.ui.components.dbsradiobutton.DBSRadioButton
                    android:id="@+id/rButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Option 2"
                    android:textColor="#FFFFFF"
                    app:dbs_radioColorChecked="#FF4081"
                    app:dbs_radioColorUnChecked="#FDB037" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lorem Ispum"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </com.dbs.ui.components.dbsradiobutton.DBSRadioButtonHolder>

        <com.dbs.ui.components.dbsradiobutton.DBSRadioButton
            android:id="@+id/rButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 3"
            android:textColor="#FFFFFF"
            app:dbs_radioColorChecked="#FF4081"
            app:dbs_radioColorUnChecked="#FDB037" />

        <com.dbs.ui.components.dbsradiobutton.DBSRadioButton
            android:id="@+id/rButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 4"
            android:textColor="#FFFFFF"
            app:dbs_radioColorChecked="#FF4081"
            app:dbs_radioColorUnChecked="#FDB037" />

    </com.dbs.ui.components.dbsradiobutton.DBSRadioGroup>
</RelativeLayout>