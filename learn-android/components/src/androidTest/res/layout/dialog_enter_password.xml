<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="64dp">

        <ImageView
            android:id="@id/dbs_popup_button_cancel"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:src="@drawable/ic_close_btn" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="0.9"
            android:text="Enter digibank password" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?dbs_themeAppBackground"
        android:orientation="vertical"
        android:padding="@dimen/small_padding">

        <com.dbs.ui.components.DBSEditTextView
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="password"
            android:inputType="textPassword" />

        <Button
            android:id="@id/dbs_popup_button_done"
            style="@style/DBSButton.Rounded"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/medium_margin"
            android:text="Submit" />
    </LinearLayout>
</LinearLayout>